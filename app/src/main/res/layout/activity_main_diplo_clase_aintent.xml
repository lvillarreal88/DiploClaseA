<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.donquijote.app.diploclasea.MainActivityDiploClaseAIntent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/diploclaseaintent_textv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_intent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/diploclaseaintent_etext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ingrese_nombre"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:inputType="text"
            android:layout_below="@id/diploclaseaintent_textv"
            />

        <TextView
            android:id="@+id/textv_diplo_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_visibility_black_24dp"
            android:layout_below="@id/diploclaseaintent_etext"
            android:textStyle="bold|italic"
            android:text="@string/vaina"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textv_diplo_visibility"
            android:layout_alignParentEnd="true"/>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">


        <TextView
            android:id="@+id/diploclaseaintent_textv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_intent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/diploclaseaintent_etext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ingrese_nombre"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:inputType="text"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textv_diplo_visibility2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_visibility_black_24dp"
                    android:textStyle="bold|italic"
                    android:text="@string/vaina"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/textv_diplo_visibility2"
                    android:layout_below="@id/textv_diplo_visibility2"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>
